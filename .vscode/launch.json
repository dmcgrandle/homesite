{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to running Homesite server",
            "port": 3001
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Node Webpack Debug server for Homesite",
            "cwd": "${workspaceRoot}/server/dist",
            "program": "${workspaceRoot}/server/src/start.ts",
            "outFiles": ["${workspaceRoot}/server/dist/server.js"],
            "env": {"DEBUG": "homesite:*"},
            // "console": "integratedTerminal",
            "sourceMaps": true,
            // "runtimeExecutable": "npm",
            // "runtimeArgs": [
            //     "run",
            //     "diststart"
            // ],
            // "port": 3001
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Homesite Angular client in Chrome",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/client",
            "sourceMaps": true,
            // "preLaunchTask": "npm start"
        },
        {
            "name": "ng test",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "Echo vars",
            // "runtimeExecutable": "ng",
            // "runtimeArgs": ["test"],
            "url": "http://localhost:9876/debug.html",
            "webRoot": "${workspaceFolder}/client",
            // "sourceMaps": true,
            // "sourceMapPathOverrides": {
            //   "/./*": "${webRoot}/*",
            //   "/src/*": "${webRoot}/*",
            //   "/*": "*",
            //   "/./~/*": "${webRoot}/node_modules/*"
            // }
        },
        {
            "name": "ng e2e",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/protractor/bin/protractor",
            "protocol": "inspector",
            "args": ["${workspaceFolder}/e2e/protractor.conf.js"]
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "old - Debug client tests",
            "port": 9876,
            "url": "http://localhost:9876",
            "webRoot": "${workspaceFolder}/client"
        },
    ]
}